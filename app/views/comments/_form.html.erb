<div class="form-devise flex flex--column flex--vertical--align">
  <%= form_with model: [@tweet, comment] do |form| %>

      <div class="field">
        <%= form.label :body %><br />
        <%= form.text_area :body, placeholder: "Remember to thing before write..."%>
      </div>

      <div>
        <%= form.submit "Edit", class: "button" %>
      </div>

  <% end %>
</div>