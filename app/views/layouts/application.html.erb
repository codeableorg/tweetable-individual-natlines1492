<!DOCTYPE html>
<html>
  <head>
    <title>TweetableIndividual</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="container">
        <div class="cta__button-group">
          <% if user_signed_in? %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn--small2" %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn--small" %>
          <% else %>
            <%= link_to "Login", new_user_session_path %>
          <% end %>
        </div>
      <div class="bg-white">
        <%= yield %>
      </div>
    </section>
  </body>
</html>
